{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "/chat-qa/**"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "streamlit run qa_multi_text_or_pdf.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
